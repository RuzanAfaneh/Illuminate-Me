<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/backgroundColor</item>
        <!-- <item name="colorPrimaryDark">@color/colorPrimaryDark</item> -->
        <item name="colorAccent">@color/purpelfont</item>

    </style>

    <style name="Theme_Dialog" parent="android:Theme.DeviceDefault.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/backgroundColor</item>
    </style>

    <style name="BottomNavigationTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">#DA70D6</item>
        <item name="android:textColorSecondary">@color/purpelfont</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/purpelfont</item>
        <item name="colorControlActivated">@color/purpelfont</item>


    </style>
         <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/logo</item>
    </style>
</resources>
